<GameCard>:
    size_hint: 1, None
    height: dp(100)
    md_bg_color: 1, 1, 1, 0.05
    on_press: self.show_open_dialog()

    RelativeLayout:
        MDLabel:
            text: root.game_title
            pos_hint: {"x": 0.28, "center_y": 0.75}
            font_name: "Nunito_bold"
            font_size: dp(20)
            halign: "left"

        MDIcon:
            icon: "file-document-outline"
            pos_hint: {"center_x": 0.15, "center_y": 0.5}
            font_size: dp(80)

        MDCard:
            pos_hint: {"center_x": 0.05, "center_y": 0.6}
            size: dp(25), dp(25)
            size_hint: None, None
            md_bg_color: 1, 1, 1, 0.05

        MDCard:
            md_bg_color: rgba("#BC96E6")
            width: 400
            height: 2
            size_hint: None, None
            pos_hint: {"center_x": 0.55, "center_y": 0.5}

        MDIconButton:
            icon: "delete"
            pos_hint: {"center_x": 0.05, "center_y": 0.6}
            font_size: dp(20)
            on_press: root.show_delete_dialog()
