MDNavigationLayout:
    ScreenManager:
        id: screen_manager

        GameScreen:
            name: "game"
            id: game_screen

    MDNavigationDrawer:
        id: nav_drawer
        ContentNavigationDrawerGame:

<ContentNavigationDrawerGame@RelativeLayout>:
    canvas.before:
        Color:
            rgba: rgba("#1E232E")
        Rectangle:
            pos: self.pos
            size: self.size

    NavigationButtonGame:
        text: "Save game"
        pos_hint: {"x": 0.3, "center_y": 0.8}
        on_press: app.save_game()

    NavigationButtonGame:
        text: "Quit"
        pos_hint: {"x": 0.3, "center_y": 0.7}
        on_press: app.stop()

<NavigationButtonGame@MDCard>:
    size_hint: None, None
    size: dp(150), dp(100)
    md_bg_color: rgba("#1E232E")

    RelativeLayout:
        MDLabel:
            pos_hint: {"center_y": 0.5}
            font_size: dp(20)
            font_name: "Nunito_bold"
            text: root.text

        MDIcon:
            pos_hint: {"x": 0.8,"center_y": 0.5}
            icon: "chevron-right"