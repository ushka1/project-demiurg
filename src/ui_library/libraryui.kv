MDNavigationLayout:
    ScreenManager:
        id: screen_manager
        MainScreen:
            name: "main"
            id: main_screen
        GameSelectionScreen:
            name: "game_selection"
            id: game_selection_screen

    MDNavigationDrawer:
        id: nav_drawer
        ContentNavigationDrawerLibrary:

<ContentNavigationDrawerLibrary@RelativeLayout>:
    canvas.before:
        Color:
            rgba: rgba("#1E232E")
        Rectangle:
            pos: self.pos
            size: self.size

    NavigationButtonLibrary:
        text: "Menu"
        pos_hint: {"x": 0.3, "center_y": 0.8}
        on_press: app.root.ids.screen_manager.current = "main"; app.root.ids.nav_drawer.set_state("close")

    NavigationButtonLibrary:
        text: "Import"
        pos_hint: {"x": 0.3, "center_y": 0.7}
        on_press: app.add_new_game()

    NavigationButtonLibrary:
        text: "Quit"
        pos_hint: {"x": 0.3, "center_y": 0.6}


<NavigationButtonLibrary@MDCard>:
    size_hint: None, None
    size: dp(150), dp(100)
    md_bg_color: rgba("#1E232E")

    RelativeLayout:
        MDLabel:
            pos_hint: {"center_y": 0.5}
            font_size: dp(20)
            font_name: "Nunito_bold"
            text: root.text

        MDIcon:
            pos_hint: {"x": 0.8,"center_y": 0.5}
            icon: "chevron-right"