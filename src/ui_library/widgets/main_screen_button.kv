<MainScreenButton>:
    md_bg_color: 0, 0, 0, 0

    FloatLayout:
        Button:
            background_color: 1, 0, 0, 1
            size_hint: None, None
            size: dp(200), dp(100)
            on_press: app.root.ids.screen_manager.current = "game_selection"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        Image:
            source: "ui_library/assets/main_screen/button_background.png"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            id: image

        Label:
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            text: root.text
            font_size: dp(20)
