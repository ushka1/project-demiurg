<MainScreen>:
    canvas.before:
        Color:
            rgba: rgba("#1E232E")
        Rectangle:
            pos: self.pos
            size: self.size

    Image:
        source: "ui_library/assets/main_screen/demiurg_logo.png"
        size_hint_x: 0.7
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

    MDCard:
        pos_hint: {"center_x": 0.25, "center_y": 0.1}
        md_bg_color: 0, 0, 0, 0

        FloatLayout:

            Image:
                source: "ui_library/assets/main_screen/button_background.png"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                id: image

            Label:
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                text: "New game"
                font_size: dp(20)


            Button:
                background_color: 1, 0, 0, 0
                size_hint: None, None
                size: dp(200), dp(100)
                on_release: print(1); app.root.ids.screen_manager.current = "game_selection"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

