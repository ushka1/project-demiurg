<MainScreen>:
    canvas.before:
        Color:
            rgba: rgba("#1E232E")
        Rectangle:
            pos: self.pos
            size: self.size

    Image:
        source: "ui_assets/main_screen/demiurg_logo.png"
        size_hint_x: 0.7
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

    OldschoolButtonLibrary:
        pos_hint: {"center_x": 0.33, "center_y": 0.1}
        on_release: app.root.ids.screen_manager.current = "game_selection"
        text: "Start"

    OldschoolButtonLibrary:
        pos_hint: {"center_x": 0.66, "center_y": 0.1}
        on_release: app.quit()
        text: "Quit"
